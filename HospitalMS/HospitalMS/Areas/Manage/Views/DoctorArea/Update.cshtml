@model Doctor


<div class="container bg-info">
    <div class="row">
        <div class="col-lg-12 text-center text-dark">Update</div>
        <div class="col-lg-12">
            <form asp-action="update" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label">Surname</label>
                    <input class="form-control" asp-for="Surname">
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Age" class="form-label">Age</label>
                    <input class="form-control" asp-for="Age">
                    <span class="text-danger" asp-validation-for="Age"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Experience" class="form-label">Experience</label>
                    <input class="form-control" asp-for="Experience">
                    <span class="text-danger" asp-validation-for="Experience"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Profession" class="form-label">Profession</label>
                    <input class="form-control" asp-for="Profession">
                    <span class="text-danger" asp-validation-for="Profession"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CardImage">Image</label>
                    <input asp-for="CardImage" class="form-control" />
                    <span class="text-danger" asp-validation-for="CardImage"></span>

                    <input type="hidden" name="Image" value="@Model.CardImage" />
                    <img width="100" src="~/uploads/doctors/@Model.Image" alt="FOTO" />
                </div>
                <div class="col-lg-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-info mb-5 mt-5">Update</button>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>
</div>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}