@model List<DoctorAppointment>
@{
    ViewData["Title"] = "Comments";
    int count = 0;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="display:inline-block">Appointments</h1>
        </div>
        <div class="col-lg-12">
            <table class="table table-info table-hover">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FullName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DoctorAppointment item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>
                                @item.Status
                            </td>
                            <td>@item.Date</td>
                            <td>@item.Time</td>
                            <td><span style="color:@(item.Status?"green":"red")" class="badge badge-@(item.Status?"success":"info")">@(item.Status?"Confirmed":"Waiting")</span></td>
                            <td>
                                <a asp-action="infoappointment" asp-route-id="@item.Id" class="btn btn-outline-light my-1"><i style="color:lightgreen" class="fa-solid fa-info fa-flip"></i></a>
                                <a asp-action="deleteappointment" asp-route-id="@item.Id" class="btn btn-outline-light delete-btn"><i style="color: crimson" class="fa-solid fa-trash-can fa-shake"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>
}