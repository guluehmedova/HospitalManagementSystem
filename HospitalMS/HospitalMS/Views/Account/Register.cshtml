@model MemberRegisterViewModel

    <!-- Main Start -->
      <div class="form_wrapper">
        <div class="form_container">
          <div class="title_container">
            <h2>User Registration Form</h2>
          </div>
          <div class="row clearfix d-flex flex-column align-items-center">
            <div class="">
              <form asp-action="register" method="post">
                  <div class="input_field">
                  <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
                  <input
                   asp-for="UserName"
                    placeholder="UserName"
                  />
                 <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="input_field">
                  <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
                  <input
                   asp-for="Email"
                    placeholder="Email"
                  />
                 <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input_field">
                  <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                  <input
                    asp-for="Password"
                    placeholder="Password"
                  />
                 <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input_field">
                  <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                  <input
                      asp-for="RepeatPassword"
                    placeholder="Re-type Password"
                  />
                 <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                </div>
                <div class="row clearfix">
                  <div class="col_half" style="width: 100%">
                    <div class="input_field">
                      <span><i aria-hidden="true" class="fa fa-user"></i></span>
                      <input asp-for="FullName" placeholder="FullName" />
                     <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                  </div>
                </div>
                <input class="button" type="submit" value="Register" />
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    <!-- Main End -->

  @section Scripts{ 
    @await Html.PartialAsync("_ValidationScriptsPartial")
}